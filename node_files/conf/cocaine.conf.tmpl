{
    "version": 2,
    "paths": {
        "plugins": "/usr/lib/cocaine",
        "runtime": "<{node_config.working_dir}>files/var/run/cocaine",
        "spool": "<{node_config.working_dir}>files/var/spool/cocaine"
    },
    "services": {
        "logging": {
            "type": "logging",
            "args": {
                "port": 12501
            }
        }
    },
    "storages": {
        "core": {
            "type": "elliptics",
            "args": {
                "nodes": {
                        "<{node}>": 1025
                },
                "groups": [2],
                "verbosity": 1
            }
        },
        "cache": {
            "type": "files",
            "args": {
                "path": "<{node_config.working_dir}>files/var/cache/cocaine"
            }
        }
    },
    "loggers": {
        "core": {
            "type": "files",
            "args": {
                "path": "<{node_config.working_dir}>files/logs/cocaine.log"
            }
        },
        "tools": {
            "type": "stdout"
        }
    }
}

